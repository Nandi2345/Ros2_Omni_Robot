<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find ros2_omni_robot_sim)/urdf/4w/omni_wheel.urdf.xacro"/>
  <xacro:include filename="$(find ros2_omni_robot_sim)/urdf/4w/camera.urdf.xacro"/>
  <xacro:include filename="$(find ros2_omni_robot_sim)/urdf/4w/lidar.urdf.xacro"/>
  <xacro:include filename="$(find ros2_omni_robot_sim)/urdf/4w/imu.urdf.xacro"/>
  <xacro:macro name="base_link" params="parent xyz rpy">
    <link name="base_link">
      <visual>
        <geometry>
          <mesh filename="package://ros2_omni_robot_sim/meshes/4w/base_link.dae" />
        </geometry>
        <!-- <material name="base_color">
          <color rgba="0.34 0.55 0.949 1" />
        </material> -->
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://ros2_omni_robot_sim/meshes/4w/base_link.stl" />
        </geometry>
      </collision>
      <inertial>
        <mass value="3.0" />
        <inertia 
          ixx="0.9" ixy="0.0" ixz="0.0"
          iyy="0.9" iyz="0.0"
          izz="0.01"/>
      </inertial>
    </link>

    <joint name="base_joint" type="fixed">
      <parent link="${parent}" />
      <child link="base_link" />
      <origin xyz="${xyz}" rpy="${rpy}" />
    </joint>

    <!-- Childs -->
    <xacro:omni_wheel parent="base_link" suffix="1" xyz="0.0656 -0.0656 0.0145" rpy="1.5708 0.0000 0.7854"/>
    <xacro:omni_wheel parent="base_link" suffix="2" xyz="0.0656 0.0656 0.0145" rpy="1.5708 0.0000 2.3562"/>
    <xacro:omni_wheel parent="base_link" suffix="3" xyz="-0.0656 0.0656 0.0145" rpy="1.5708 0.0000 -2.3562"/>
    <xacro:omni_wheel parent="base_link" suffix="4" xyz="-0.0656 -0.0656 0.0145" rpy="1.5708 0.0000 -0.7854"/>

    <xacro:camera parent="base_link" suffix="1" xyz="0.1035 -0.0000 0.0630" rpy="0 0 0"/>
    <xacro:lidar parent="base_link" suffix="1" xyz="0.0000 0.0000 0.1010" rpy="0 0 0"/>
    <xacro:imu parent="base_link" suffix="1" xyz="0 0 0" rpy="0 0 0"/>
  </xacro:macro>
</robot>